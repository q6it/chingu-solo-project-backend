{
  "tabWidth": 4,
  "printWidth": 100,
  "singleQuote": true,
  "quoteProps": "consistent",
  "trailingComma": "es5",
  "arrowParens": "always",
  "overrides": [
    {
      "files": [
        ".prettierrc",
        ".eslintrc",
        ".babelrc",
        "*.json",
        "*.webmanifest",
        "*.yml",
        "*.yaml"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
